@model IEnumerable<lenderBorrower.Models.item>

<div>
    @if(Model.Count() > 0)
    {
        <h3>Borrowed Items</h3>
        <div>
            <table>
                <thead>
                    <tr>
                        <th>id</th>
                        <th>Item</th>
                        <th>Borrower</th>
                        <th>Lender</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td width="30%">@item.Id</td>
                            <td width="30%">@item.Item</td>
                            <td width="30%">@item.Borrower</td>
                            <td width="30%">@item.Lender</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <a asp-controller="item" asp-action="create" class="btn btn-primary">Create New Item</a>

    } 
    else
    {
        <p>No items created yet</p>
    }
</div>